{% extends 'base.html.twig' %}

{% block title %}{{comicBook.getCbName()}}{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
        border: 1px solid black;
        padding: 50px;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    .container {
        padding:10px;
        margin-top:50px;
        margin-bottom:50px;
    }
    .comicBook-container {
        display:flex;
        flex-direction:row;
    }
    .comicBook-details-container {
        display: flex;
        flex-direction:column;
        justify-content: center;
        align-items: center;
        align-content: center;
    }
</style>

<div class="container">
    <div class="comicBook-container">
        <div>
            <img src="{{comicBook.getCbImage().getCbImageUrl()}}" alt="{{comicBook.getCbImage().getCbImageAlt()}}" width="500" height="700"/>
        </div>
        <div class="comicBook-details-container">
            <h1>ComicBook : {{ comicBook.getId() }}</h1>
            <ul>
                <li>Name : {{comicBook.getCbName()}}</li>
                <li>Date : {{comicBook.getCbYear()}}</li>
                <li>Main Superhero : {{comicBook.getCbMainSuperhero()}}</li>
                <li>Editor : {{editor.getEditorName()}}</li>
                <li>Price : <span style="font-weight:bold">{{comicBook.getCbPrice()}}</li>
                <li>
                <h4>Description : </h4>
                <span>{{comicBook.getCbDescription()}}</span>
                </li>
            </ul>
            <button type="button" class="btn btn-outline-danger waves-effect">Purchase</button>
        </div>
    </div>
</div>

{% endblock %}